<Window x:Class="WeSplit.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeSplit"
        mc:Ignorable="d"
        Title="SettingWindow" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  Loaded="Window_Loaded" Closing="Window_Closing">

    <!--<Window.Icon>
        <BitmapImage UriSource="Icon/settings.png" RenderOptions.BitmapScalingMode="HighQuality"></BitmapImage>
    </Window.Icon>-->

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <CheckBox Name="isVisibleSplashScreen" VerticalAlignment="Center" Margin="2" Checked="isVisibleSplashScreen_Checked" Unchecked="isVisibleSplashScreen_Unchecked"></CheckBox>
        <TextBlock VerticalAlignment="Center"> Hiển thị Splash Screen</TextBlock>
    </StackPanel>
</Window>
